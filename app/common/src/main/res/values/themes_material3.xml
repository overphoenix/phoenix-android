<resources>

    <style name="Platform.V21.Theme.Phoenix.Material3" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="colorPrimaryDark">@color/system_window_scrim_compat</item>
    </style>
    <style name="Platform.Theme.Phoenix.Material3" parent="Platform.V21.Theme.Phoenix.Material3" />
    <style name="Base.Theme.Phoenix.Material3" parent="Platform.Theme.Phoenix.Material3">

        <item name="actionBarTheme">@style/ThemeOverlay.Phoenix.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Phoenix.ActionBarPopup</item>
        <item name="android:colorBackground">?colorSurface</item>
        <item name="dropDownListViewStyle">@style/Widget.Phoenix.ListView.DropDown</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorAccent">?colorPrimary</item>
        <item name="floatingActionButtonStyle">?floatingActionButtonSecondaryStyle</item>
        <item name="materialCardViewStyle">@style/Widget.Phoenix.CardView</item>
        <item name="minTouchTargetSize">0dp</item>
        <item name="navigationViewStyle">@style/Widget.Phoenix.Material3.NavigationView</item>
        <item name="switchStyle">@style/Widget.Phoenix.Material3.CompoundButton.Switch</item>
        <item name="tabStyle">@style/Widget.Phoenix.Material3.TabLayout</item>
        <item name="textAppearanceListItem">@style/TextAppearance.Phoenix.Material3.ListItem</item>
        <item name="android:textAppearanceListItem">?textAppearanceListItem</item>
        <item name="textAppearanceListItemSmall">@style/TextAppearance.Phoenix.Material3.ListItemSmall</item>
        <item name="android:textAppearanceListItemSmall">?textAppearanceListItemSmall</item>
        <item name="textInputStyle">?textInputOutlinedStyle</item>
        <item name="toolbarStyle">@style/Widget.Phoenix.Material3.Toolbar</item>

        <item name="colorAppBarSurface">?colorSurface</item>
    </style>
    <style name="Theme.Phoenix.Material3" parent="Base.Theme.Phoenix.Material3" />

    <style name="Platform.V21.Theme.Phoenix.Material3.Translucent" parent="Theme.Phoenix.Material3">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="Platform.Theme.Phoenix.Material3.Translucent" parent="Platform.V21.Theme.Phoenix.Material3.Translucent" />
    <style name="Base.Theme.Phoenix.Material3.Translucent" parent="Platform.Theme.Phoenix.Material3.Translucent">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Phoenix.Material3.Translucent" parent="Base.Theme.Phoenix.Material3.Translucent" />

    <style name="Platform.V21.Theme.Phoenix.Material3.Immersive" parent="Theme.Material3.DynamicColors.Dark">
        <item name="android:navigationBarColor">?colorPrimaryDark</item>

        <item name="colorPrimaryDark">@color/dark_50_percent</item>
    </style>
    <style name="Platform.Theme.Phoenix.Material3.Immersive" parent="Platform.V21.Theme.Phoenix.Material3.Immersive" />
    <style name="Base.Theme.Phoenix.Material3.Immersive" parent="Platform.Theme.Phoenix.Material3.Immersive">

        <item name="actionBarTheme">@style/ThemeOverlay.Phoenix.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Phoenix.ActionBarPopup</item>
        <item name="android:colorBackground">?colorSurface</item>
        <item name="dropDownListViewStyle">@style/Widget.Phoenix.ListView.DropDown</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="windowNoTitle">true</item>

        <item name="colorAccent">?colorPrimary</item>
        <item name="floatingActionButtonStyle">?floatingActionButtonSecondaryStyle</item>
        <item name="materialCardViewStyle">@style/Widget.Phoenix.CardView</item>
        <item name="minTouchTargetSize">0dp</item>
        <item name="navigationViewStyle">@style/Widget.Phoenix.Material3.NavigationView</item>
        <item name="switchStyle">@style/Widget.Phoenix.Material3.CompoundButton.Switch</item>
        <item name="tabStyle">@style/Widget.Phoenix.Material3.TabLayout</item>
        <item name="textAppearanceListItem">@style/TextAppearance.Phoenix.Material3.ListItem</item>
        <item name="android:textAppearanceListItem">?textAppearanceListItem</item>
        <item name="textAppearanceListItemSmall">@style/TextAppearance.Phoenix.Material3.ListItemSmall</item>
        <item name="android:textAppearanceListItemSmall">?textAppearanceListItemSmall</item>
        <item name="textInputStyle">?textInputOutlinedStyle</item>
        <item name="toolbarStyle">@style/Widget.Phoenix.Material3.Toolbar</item>

        <item name="colorAppBarSurface">@color/dark_50_percent</item>
    </style>
    <style name="Theme.Phoenix.Material3.Immersive" parent="Base.Theme.Phoenix.Material3.Immersive" />

    <style name="Theme.Phoenix.Material3.Black" />
</resources>
